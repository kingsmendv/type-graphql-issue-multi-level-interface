{
  "compilerOptions": {
    "preserveConstEnums": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "lib": ["ESNext"],
    "incremental": true,
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./graphql/",
    "rootDir": "./graphql/"
  },
  "include": ["graphql/**/*"]
}
